{
  "target": {
    "host": "localhost",
    "port": 8787,
    "secure": false,
    "middleware_run_list": ["identity_provider", "rate_limiting",
                            "authentication"]
  },

  "middleware": {
    "identity_provider": {},
     "rate_limiting": {
        "depends": ["identity_provider"]
    },
    "authentication": {
      "depends": ["identity_provider"]
    }
  },

  "rate_limits": [
    ['METHOD', 'PATH REGEX', 'LIMIT', 'TIME UNIT'],
    ['POST', '/path/(.*?)', 100, '24hr']
  ]
}
