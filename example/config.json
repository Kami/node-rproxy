{

  "server": {
    "host": "localhost",
    "port": 8000,
    "secure": false
  },

  "target": {
    "host": "localhost",
    "port": 8787,
    "secure": false,
    "middleware_run_list": ["identity_provider", "rate_limiting",
                            "authentication"]
  },

  "database": {
    "backend": "redis",
    "settings": {
      "host": "localhost",
      "port": 6379,
      "password": null
    }
  },

  "middleware": {
    "identity_provider": {},
     "rate_limiting": {
        "depends": ["identity_provider"]
    },
    "authentication": {
      "depends": ["identity_provider"],
      "settings": {
        "username": null,
        "password": null,
        "us_url": "https://auth.api.rackspacecloud.com/v2.0",
        "uk_url": "https://lon.auth.api.rackspacecloud.com/v2.0"
      }
    }
  },

  "rate_limits": [
    {
      "method": "GET",
      "path_regex": "/.*?",
      "limit": 10,
      "period": 3600
    }
  ]
}
