{

  "server": {
    "host": "localhost",
    "port": 8000,
    "secure": false
  },

  "target": {
    "host": "localhost",
    "port": 8787,
    "secure": false,
    "middleware_run_list": ["identity_provider", "rate_limiting",
                            "authentication"]
  },

  "database": {
    "backend": "redis",
    "settings": {
      "host": "localhost",
      "port": 6379,
      "password": null
    }
  },

  "middleware": {
    "identity_provider": {},
     "rate_limiting": {
        "depends": ["identity_provider"],
        "settings": {
          "bucket_size": 10,
          "limits": [
            {
              "method": "GET",
              "path_regex": "/.*?",
              "limit": 10,
              "period": 60
            },
            {
              "method": "GET",
              "path_regex": "/test/.*?",
              "limit": 5,
              "period": 60
            }
          ]
        }
    },
    "authentication": {
      "depends": ["identity_provider"],
      "settings": {
        "username": null,
        "password": null,
        "urls": ["https://auth.api.rackspacecloud.com/v2.0",
                 "https://lon.auth.api.rackspacecloud.com/v2.0"]
      }
    }
  }
}
