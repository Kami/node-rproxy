{
  "server": {
    "host": "localhost",
    "port": 9000,
    "secure": false
  },

  "target": {
    "host": "localhost",
    "port": 9001,
    "secure": false,
    "middleware_run_list": {
      "request": ["identity_provider", "rate_limiting", "authentication"],
      "response": ["usage", "rate_limiting", "header_remover"]
    }
  },

  "database": {
    "backend": "cassandra",
    "settings": {
      "hosts": ["127.0.0.1:9160"],
      "keyspace": "rproxy",
      "read_consistency": "ONE",
      "write_consistency": "ONE"
    }
  },

  "middleware": {
    "identity_provider": {},
     "rate_limiting": {
        "bucket_size": 4,
        "limits": [
          {
            "method": "GET",
            "path_regex": "/.*",
            "limit": 10,
            "period": 4
          },
          {
            "method": "GET",
            "path_regex": "/test/.*",
            "limit": 4,
            "period": 4
          }
        ],
        "usage_proxy_path": "/limits",
        "usage_target_path": "/rate_limits"
    },
    "authentication": {
      "urls": ["http://127.0.0.1:23542/v2.0"],
      "whitelist": ["/whitelisted"]
    },
    "usage": {
      "url": "http://127.0.0.1:9002/hopper",
      "service_name": "maas",
      "region": "us",
      "datacenter": "dfw2"
    },
    "header_remover": {
      "prefixes": ["x-rp", "x-test"]
    }
  }
}
